<mvc:View
    controllerName="com.client.itrequestmanager.itrequestmanager.controller.CreateRequest"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    height="100%"
    displayBlock="true">

    <Page 
        title="{i18n>createPageTitle}" 
        showNavButton="true" 
        navButtonPress=".onNavBack">
        
        <content>
            <layout:VerticalLayout class="sapUiContentPadding" width="100%">
                
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="{i18n>createFormTitle}"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    
                    <form:content>
                        <Label text="{i18n>labelCategory}" required="true"/>
                        <Select id="categorySelect" selectedKey="" forceSelection="false">
                            <items>
                                <core:Item key="Access" text="{i18n>categoryAccess}"/>
                                <core:Item key="Hardware" text="{i18n>categoryHardware}"/>
                                <core:Item key="Software" text="{i18n>categorySoftware}"/>
                                <core:Item key="Network" text="{i18n>categoryNetwork}"/>
                            </items>
                        </Select>

                        <Label text="{i18n>labelPriority}" required="true"/>
                        <Select id="prioritySelect" selectedKey="" forceSelection="false">
                            <items>
                                <core:Item key="Low" text="{i18n>priorityLow}"/>
                                <core:Item key="Medium" text="{i18n>priorityMedium}"/>
                                <core:Item key="High" text="{i18n>priorityHigh}"/>
                                <core:Item key="Critical" text="{i18n>priorityCritical}"/>
                            </items>
                        </Select>

                        <Label text="{i18n>labelDescription}" required="true"/>
                        <TextArea
                            id="descArea"
                            rows="5"
                            width="100%"
                            placeholder="{i18n>descriptionPlaceholder}"
                            valueLiveUpdate="false"/>
                    </form:content>
                </form:SimpleForm>

                <layout:HorizontalLayout class="sapUiSmallMarginTop">
                    <Button 
                        text="{i18n>btnCancel}" 
                        type="Transparent" 
                        press=".onCancel"/>
                    <Button 
                        text="{i18n>btnSubmit}" 
                        type="Emphasized" 
                        press=".onSubmit" 
                        class="sapUiTinyMarginBegin"/>
                </layout:HorizontalLayout>
                
            </layout:VerticalLayout>
        </content>
    </Page>
</mvc:View>